{
  "name": "kubetls",
  "version": "1.0.0",
  "description": "KubeTLS adds certificates as secrets in Kubernetes clusters, and simplifies the process of obtaining and renewing those certificates.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && node dist/main.js",
    "lint": "prettier --write --config prettier.config.js --list-different src/**/*.ts",
    "start": "node ./dist/main.js",
    "test": "tsc && jest --coverage --testPathPattern ./dist/.*\\.test\\.js$"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.1",
    "@types/qs": "^6.9.17",
    "@types/request": "^2.48.12",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@kubernetes/client-node": "^0.22.3",
    "acme-client": "^5.4.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "mongodb": "^6.12.0",
    "qs": "^6.13.1"
  }
}
